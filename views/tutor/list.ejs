<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<table width='80%' border=0>

	<tr style='text-align:left; background-color:#CCC'>
		<th>Name</th>
		<th>Subject</th>
		<th>Email</th>
		<th>Action</th>
	</tr>

    <% if (data) { %>
        <% data.forEach((tutor) => { %>
        <tr>
            <td><%= tutor.name %></td>
            <td><%= tutor.subject %></td>
            <td><%= tutor.email %></td>
            <td>
                <div style="float:left">
                    <a class="btn btn-success btn-lg"href='/tutors/edit/<%= tutor.id %>'>Edit</a> &nbsp;
                    <form method="post" action="/tutors/delete/<%= tutor.id %>" style="float:right">
                        <button class="btn waves-effect waves-light red" type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                        <input type="hidden" name="_method" value="DELETE" />
                    </form>
                </div>
            </td>
        </tr>
    <% }) %>
    <% } %>
</table>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
