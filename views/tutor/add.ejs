<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">

<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/tutors/add" method="post" name="form1">
	<table width="50%" border="0">
		<tr>
			<td>Name</td>
			<td><input type="text" name="name" id="name" value="<%= name %>" /></td>
		</tr>
		<tr>
			<td>Subject</td>
			<td><input type="text" name="subject" value="<%= subject %>" /></td>
		</tr>
		<tr>
			<td>Email</td>
			<td><input type="text" name="email" value="<%= email %>" /></td>
		</tr>
		<tr>
			<td></td>
			<td><input class="btn btn-primary btn-sm" type="submit" name="Submit" value="Add" /></td>
		</tr>
	</table>
</form>

<div class="row">
  <form action="/tutors/add" method="post" class="col s12" name="add-tutor">
	<div class="row">
	  <div class="input-field col s6">
		<i class="material-icons prefix">account_circle</i>
		<input id="icon_prefix" type="text" class="validate" value="<%= name %>">
		<label for="icon_prefix">Name</label>
	  </div>
	  <div class="input-field col s6">
		<i class="material-icons prefix">phone</i>
		<input id="icon_telephone" type="tel" class="validate">
		<label for="icon_telephone">Subject</label>
	  </div>
	</div>
  </form>
</div>

<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
